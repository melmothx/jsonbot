#!/usr/bin/env python
#
#

# bootstrap

import sys
import os
sys.path.insert(0, os.getcwd())

# gozerlib imports

from gozerlib.botbase import BotBase
from gozerlib.plugins import Plugins
from gozerlib.config import Config
from gozerlib.datadir import makedirs, datadir
import gozerlib.users as users
from gozerlib.utils.generic import getversion
from gozerlib.boot import boot

## basic imports

import getpass
import logging

## functions
print getversion()
makedirs()
boot()
bot = BotBase()
bot.users.make_owner(getpass.getuser())
bot.loadplugs(['gozerlib.plugs', 'commonplugs', 'waveplugs'])
bot.start()
